{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "types": [
      "node",
      "jest",
      "express",
      "mongoose",
      "winston",
      "joi",
      "supertest",
      "graphql",
      "jsonwebtoken"
    ],
    "typeRoots": ["./node_modules/@types"],
    "noImplicitAny": false
  },
  "include": ["src/**/*.ts", "src/**/*.test.ts"],
  "exclude": ["node_modules", "dist"]
}
