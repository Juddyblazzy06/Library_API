{
  "name": "library-management-system",
  "version": "1.0.0",
  "description": "Library Management System with GraphQL and REST APIs",
  "main": "dist/app.js",
  "scripts": {
    "start": "node dist/server.js",
    "dev": "nodemon src/server.ts",
    "build": "npm ci && tsc -p tsconfig.json",
    "test": "cross-env NODE_ENV=test jest --detectOpenHandles --forceExit --config jest.config.js"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "setupFilesAfterEnv": [
      "<rootDir>/src/tests/setup.ts"
    ],
    "moduleNameMapper": {
      "^@/(.*)$": "<rootDir>/src/$1"
    }
  },
  "keywords": [
    "library",
    "management",
    "graphql",
    "rest",
    "typescript",
    "node"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@typegoose/typegoose": "^11.0.0",
    "apollo-server-express": "^3.12.0",
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "dotenv": "^16.0.3",
    "express": "^4.18.2",
    "express-rate-limit": "^7.2.0",
    "express-validator": "^7.0.1",
    "graphql": "^15.7.2",
    "helmet": "^7.1.0",
    "ioredis": "^5.3.2",
    "joi": "^17.9.1",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^7.0.3",
    "morgan": "^1.10.0",
    "pm2": "^5.3.1",
    "redis": "^4.6.5",
    "reflect-metadata": "^0.1.13",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.0",
    "type-graphql": "^1.1.1",
    "winston": "^3.8.2"
  },
  "devDependencies": {
    "@types/cors": "^2.8.13",
    "@types/express": "^4.17.21",
    "@types/graphql": "^14.5.0",
    "@types/ioredis": "^5.0.0",
    "@types/jest": "^29.5.14",
    "@types/joi": "^17.2.3",
    "@types/jsonwebtoken": "^9.0.9",
    "@types/mongoose": "^5.11.97",
    "@types/node": "^18.15.11",
    "@types/supertest": "^2.0.16",
    "@types/winston": "^2.4.4",
    "cross-env": "^7.0.3",
    "jest": "^29.5.0",
    "mongodb-memory-server": "^8.12.2",
    "nodemon": "^2.0.22",
    "supertest": "^6.3.3",
    "ts-jest": "^29.3.1",
    "ts-node": "^10.9.1",
    "typescript": "^5.0.4"
  }
}
